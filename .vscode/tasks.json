{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: build active file",
            "command": "g++",
            "args": [
                "-DDEBUG",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "windows": {
                "args": [
                    "-DDEBUG",
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}\\${fileBasenameNoExtension}.exe"
                ],
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Clean junks",
            "command": "find . ! -path \"*/.git/*\" \\( -name '*.class' -or -name '*.prob' -or -name '*.exe' -or ! -name \"*.*\" -or -name \"tempCodeRunnerFile.cpp\" \\) -type f -delete",
            "windows": {
                "command": "del",
                "args": [
                    "/s",
                    "/q",
                    "*.exe",
                    "*.class",
                    "*.prob",
                    "tempCodeRunnerFile.cpp"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Path fix",
            "command": "node",
            "args": [
                "editSettings.js"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "build"
        }
    ]
}
